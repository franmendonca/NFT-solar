<div class="show-content">
  <div class="row background-show" data-controller="toggle-rental-form">
    <%= render "shared/show-card", class: "col-sm-12" %>
    <div class="container <%= "d-none" unless @rental.errors.present? %> create-form" data-toggle-rental-form-target="formContainer">
      <%= simple_form_for([@nft, @rental]) do |f| %>
        <%#= f.error_notification %>
        <%#= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
        <div class="form-inputs">
          <%= f.input :start_date, html5: true %>
        </div>
        <div class="form-inputs">
          <%= f.input :end_date, html5: true  %>
        </div>
        <div class="form-actions btn btn-primary mb-3">
          <%= f.button :submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>
