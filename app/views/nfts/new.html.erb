<div class="container">
  <h1>Create your NFT</h1>
  <%= simple_form_for(@nft) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <div class="form-inputs">
      <%= f.input :name %>
    </div>
    <div class="form-inputs">
      <%= f.input :description %>
    </div>
    <div class="form-inputs">
      <%= f.input :price %>
    </div>
        <div class="form-inputs">
      <%= f.input :wallet_address %>
    </div>
    <div class="form-inputs">
      <%= f.input :photo, as: :file %>
    </div>
    <div class="form-actions btn btn-primary mb-3">
      <%= f.button :submit %>
    </div>

  <% end %>
  <%= link_to 'Go Back to our NFT lists to browse', nfts_path, class: "btn btn-secondary"%>
</div>
