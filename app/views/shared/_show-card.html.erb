<div class="row d-flex justify-content-center">
  <div class="show-card col-lg-12 col-md-10" >
    <div class="row">
      <div class= "col-md-6 col-lg-4 col-sm-12 p-0">
        <%= cl_image_tag @nft.photo.key, class: "show-card-img", width: "100%", height: "100%"%>
      </div>
    <div class="show-card-infos col-sm-12 col-md-6 col-lg-8">
      <div>
        <div>
          <%= link_to  nfts_path do  %>
          <i class="fas fa-times"></i>
          <% end %>
        </div>
          <h2><%= @nft.name %></h2>
          <p><strong>About:</strong> <%= @nft.description %></p>
          <p><strong>Wallet address: </strong><%= @nft.wallet_address %></p>
        </div>
        <div class="d-flex justify-content-between align-items-center price">
          <h5 ><strong>Price: </strong><%= @nft.price %> $</h5>
          <button type="button" class="btn btn-light" data-action="click->toggle-rental-form#toggle">Rent it!</button>
        </div>
    </div>
    </div>
  </div>
</div>
